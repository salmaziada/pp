<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Space contains text -->
    <item android:state_focused="true" android:state_checked="true">
        <shape android:shape="oval">
            <size android:height="@dimen/_60sdp"
                android:width="@dimen/_60sdp"

                />

            />
            <size android:height="@dimen/_60sdp"
                android:width="@dimen/_60sdp"

                />


            <solid android:color="@color/blak"/>
            <size android:height="@dimen/_60sdp"
                android:width="@dimen/_60sdp"

                />
        </shape>

        <size android:height="@dimen/_60sdp"
            android:width="@dimen/_60sdp"

            />
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="oval">

            />


            <solid android:color="#F2CC5E1F"/>
        </shape>

    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/blak"/>
            />
            <size android:height="@dimen/_60sdp"
                android:width="@dimen/_60sdp"

                />
        </shape>
        <size android:height="@dimen/_60sdp"
            android:width="@dimen/_60sdp"

            />
    </item>
    <!-- PinEntryEditText is not focused -->
    <item>
        <shape android:shape="oval">
            />
            <solid android:color="@color/blak"/>
            <size android:height="@dimen/_40sdp"
                android:width="@dimen/_40sdp"

                />
        </shape>

    </item>
</selector>