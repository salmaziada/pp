<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_9sdp"
    android:background="@color/blak"
    android:id="@+id/lay"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/selected_item"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="@id/time_vlue"
    app:layout_constraintEnd_toEndOf="@id/time_vlue"
    android:src="@drawable/arrow_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/time_vlue"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:text="12:00"
        app:layout_constraintTop_toBottomOf="@id/selected_item"
        android:fontFamily="@font/t_regular"
        android:textSize="@dimen/_19ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>