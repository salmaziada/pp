<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF7833"
    android:layoutDirection="locale"
    android:orientation="vertical"


    android:textDirection="locale"
    tools:context=".ui.contact_us.ContactUsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contatct_us"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/logo_contatctus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_21sdp"
                android:fontFamily="@font/t_bold"
                android:text="@string/label_conatct_us"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@id/logo" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp"
                android:drawableStart="@drawable/phone_cell"
                android:drawablePadding="@dimen/_7sdp"
                android:fontFamily="@font/t_medium"
                android:text="+965654622225315"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="@id/label" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:drawableStart="@drawable/email_icon"
                android:drawablePadding="@dimen/_7sdp"
                android:fontFamily="@font/t_medium"
                android:text="uiux@selsela.info"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="@id/mobile"
                app:layout_constraintStart_toEndOf="@id/mobile"
                app:layout_constraintTop_toTopOf="@id/mobile" />

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/t_medium"
                android:text="@string/full_name_label"
                android:textColor="#191919"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image" />


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/name_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:background="@drawable/rec5"
                android:backgroundTint="#CC5E1F"
                android:fontFamily="@font/t_regular"
                android:hint="@string/name_example_label"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_17sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:textAlignment="viewStart"
                android:textColorHint="#80FFFFFF"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/name_label"
                app:layout_constraintTop_toBottomOf="@id/name_label" />


            <TextView
                android:id="@+id/eamil_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/t_medium"
                android:text="@string/emaily_label"
                android:textColor="#191919"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/name_label"
                app:layout_constraintTop_toBottomOf="@id/name_edit" />


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/email_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:background="@drawable/rec5"
                android:backgroundTint="#CC5E1F"
                android:fontFamily="@font/t_regular"
                android:hint="@string/email_example_label"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_17sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:textAlignment="viewStart"
                android:textColorHint="#80FFFFFF"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/name_label"
                app:layout_constraintTop_toBottomOf="@id/eamil_label" />


            <TextView
                android:id="@+id/massege_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/t_medium"
                android:text="@string/message_label"
                android:textColor="#191919"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/name_label"
                app:layout_constraintTop_toBottomOf="@id/email_editText" />


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/message_title_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:background="@drawable/rec5"
                android:backgroundTint="#CC5E1F"
                android:fontFamily="@font/t_regular"
                android:hint="@string/message_title"
                android:inputType="text"
                android:paddingStart="@dimen/_17sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:textAlignment="viewStart"
                android:textColorHint="#80FFFFFF"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/name_label"
                app:layout_constraintTop_toBottomOf="@id/massege_label" />


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/message_text_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:background="@drawable/rec5"
                android:backgroundTint="#CC5E1F"
                android:fontFamily="@font/t_regular"
                android:hint="@string/message_text"
                android:lines="4"
                android:paddingStart="@dimen/_17sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:textAlignment="viewStart"
                android:textColorHint="#80FFFFFF"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/name_label"
                app:layout_constraintTop_toBottomOf="@id/message_title_editText" />


            <Button
                android:id="@+id/send_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:background="@drawable/rec25"
                android:backgroundTint="#191919"
                android:fontFamily="@font/t_medium"
                android:paddingTop="@dimen/_9sdp"
                android:paddingBottom="@dimen/_9sdp"
                android:text="@string/send_label"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/message_text_editText"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>